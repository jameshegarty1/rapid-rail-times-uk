server {
    listen 8080;

    location / {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri /index.html; 
    }

    location /assets/ {
        root /usr/share/nginx/html;
        expires max;
        add_header Cache-Control "public, no-transform";
    }

    add_header X-Content-Type-Options nosniff;

}
